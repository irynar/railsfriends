<p id="notice"><%= notice %></p>

<% if user_signed_in? %>

    <table class="table table-striped table-hover table-bordered" >
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone number</th>
          <th>User Id</th>
          <th> </th>
        </tr>
      </thead>

      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
            <tr>
              <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
              <td><%= friend.email %></td>
              <td><%= friend.phone_number %></td>
              <td><%= friend.user_id %></td>
              <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' } %>, class: "btn btn-outline dan"</td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Friend', new_friend_path, class: "btn btn-secondary" %>

<% else %>

  <h1>Hello world </h1>

<% end %>